<!DOCTYPE html>
<html lang="he">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Symmetry Face Live</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.9.0/p5.js"></script>
    <script src="https://unpkg.com/ml5@1/dist/ml5.min.js"></script>
    <style>
        body { margin: 0; background: #000; overflow: hidden; touch-action: none; }
        #ui { position: absolute; bottom: 30px; width: 100%; display: flex; justify-content: center; gap: 20px; z-index: 100; }
        button { 
            padding: 15px 25px; border-radius: 50px; border: 2px solid white; 
            background: rgba(0,0,0,0.7); color: white; font-weight: bold; font-size: 16px;
        }
        #status {
            position: absolute; top: 50%; width: 100%; text-align: center;
            color: white; font-family: sans-serif; pointer-events: none;
        }
    </style>
</head>
<body>
    <div id="status">אנא אשר מצלמה וגע במסך להפעלה</div>
    <div id="ui">
        <button onclick="mirrorSide='left'">שכפל שמאל</button>
        <button onclick="mirrorSide='right'">שכפל ימין</button>
    </div>

<script>
let capture;
let faceMesh;
let face;
let mirrorSide = 'left';
let isReady = false;

function preload() {
    // טעינת המודל משרת חיצוני מהיר
    faceMesh = ml5.faceMesh({ maxFaces: 1, flipped: false });
}

function setup() {
    createCanvas(windowWidth, windowHeight);
    
    // הגדרות אופטימליות לאייפון
    let constraints = {
        video: { facingMode: "user", width: { ideal: 640 }, height: { ideal: 480 } },
        audio: false
    };

    capture = createCapture(constraints, () => {
        isReady = true;
        document.getElementById('status').innerHTML = "מחפש פנים...";
    });
    
    capture.elt.setAttribute('playsinline', '');
    capture.size(640, 480);
    capture.hide();

    faceMesh.detectStart(capture, (results) => {
        if (results && results.length > 0) {
            face = results[0];
            document.getElementById('status').style.display = 'none';
        }
    });
}

function draw() {
    background(0);
    if (!isReady || !face || !face.keypoints) return;

    // נקודה 1 היא גשר האף (ציר הסימטריה הדינמי)
    let nose = face.keypoints[1];
    let cutX = nose.x; 
    
    let cw = capture.width;
    let ch = capture.height;
    
    // התאמת קנה מידה למסך
    let screenScale = height / ch;
    let screenNoseX = map(cutX, 0, cw, 0, cw * screenScale);
    
    // ממרכז את "הישות הסימטרית" למרכז המסך הפיזי
    let offsetX = (width / 2) - screenNoseX;
    
    push();
    translate(offsetX, 0);

    if (mirrorSide === 'left') {
        // גזירת צד שמאל מהמצלמה (עד האף) והדבקה
        image(capture, 0, 0, screenNoseX, height, 0, 0, cutX, ch);
        // שיקוף של אותו צד בדיוק לצד ימין סביב האף
        push();
        translate(screenNoseX * 2, 0);
        scale(-1, 1);
        image(capture, 0, 0, screenNoseX, height, 0, 0, cutX, ch);
        pop();
    } else {
        // גזירת צד ימין מהמצלמה (מהאף והלאה) והדבקה
        let rightPartWidth = (cw - cutX) * screenScale;
        image(capture, screenNoseX, 0, rightPartWidth, height, cutX, 0, cw - cutX, ch);
        // שיקוף של אותו צד בדיוק לצד שמאל סביב האף
        push();
        translate(screenNoseX * 2, 0);
        scale(-1, 1);
        image(capture, screenNoseX, 0, rightPartWidth, height, cutX, 0, cw - cutX, ch);
        pop();
    }

    // קו סימטריה שעוקב אחרי האף
    stroke(0, 255, 0, 150);
    strokeWeight(3);
    line(screenNoseX, 0, screenNoseX, height);
    pop();
}

// פקודת ההפעלה הקריטית לאייפון
function touchStarted() {
    if (capture && capture.elt) {
        capture.elt.play();
    }
}

function windowResized() {
    resizeCanvas(windowWidth, windowHeight);
}
</script>
</body>
</html>
